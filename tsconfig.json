{
	"compilerOptions": {
		"baseUrl": ".",
		"rootDirs": ["src"],
		"outDir": "dist",
		"lib": ["es2020"],
		"target": "ESNext",
		"module": "ES6",
		"sourceMap": false,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"types": ["node"]
	},
	"tsc-alias": {
		"resolveFullPaths": true,
		"verbose": false
	  },
	"include": [ "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
